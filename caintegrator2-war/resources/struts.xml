<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <package name="caintegrator2" extends="struts-default">

        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types>
        
        <interceptors>
        
            <interceptor name="servletConfig" class="org.apache.struts2.interceptor.ServletConfigInterceptor"/>

            <interceptor-stack name="caIntegrator2DefaultStack">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="params"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="checkbox"/>
                <interceptor-ref name="params"/>
                <interceptor-ref name="conversionError"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
            </interceptor-stack>

        </interceptors>
       
        <default-interceptor-ref name="caIntegrator2DefaultStack" />
        
        <!--  Navigation Actions -->
        <action name="home" method="openHomepage" class="homepageAction">
            <result name="homepage" type="tiles">homepage</result>
        </action>
        
        <action name="workspace" method="openWorkspace" class="workspaceAction">
            <result name="workspaceStudy" type="tiles">workspaceStudy</result>
            <result name="workspaceNoStudy">workspaceNoStudy.jsp</result>
        </action>
        
        <!--  Study Actions -->
   
        <action name="addClinicalFile" method="addClinicalFile" class="defineClinicalSourceAction">
            <result name="editClinicalFile" type="tiles">editClinicalFile</result>
            <result name="invalidFile" type="tiles">editStudy</result>
            <result name="input" type="tiles">editStudy</result>
            <result name="fileIoError" type="tiles">fileIoError</result>
        </action>
   
        <action name="addGenomicSource" method="addGenomicSource" class="defineStudyAction">
            <result name="editGenomicSource" type="tiles">editGenomicSource</result>
        </action>

        <action name="createStudy" method="createStudy" class="defineStudyAction">
            <result name="editStudy" type="tiles">editStudy</result>
        </action>
      
        <action name="deployStudy" method="deployStudy" class="defineStudyAction">
            <result name="editStudy" type="tiles">editStudy</result>
        </action>
        
        <action name="editClinicalSource" method="editClinicalSource" class="defineClinicalSourceAction">
            <result name="editClinicalFile" type="tiles">editClinicalFile</result>
        </action>
   
        <action name="editFileColumn" method="editFileColumn" class="defineFileColumnAction">
            <result name="editFileColumn" type="tiles">editFileColumn</result>
        </action>
   
        <action name="editStudy" method="editStudy" class="defineStudyAction">
            <result name="editStudy" type="tiles">editStudy</result>
        </action>
   
        <action name="manageStudies" method="manageStudies" class="manageStudiesAction">
            <result name="manageStudies" type="tiles">manageStudies</result>
        </action>
   
        <action name="saveStudy" method="saveStudy" class="defineStudyAction">
            <result name="editStudy" type="tiles">editStudy</result>
        </action>
   
        <action name="searchDefinitions" method="searchDefinitions" class="defineFileColumnAction">
            <result name="editFileColumn" type="tiles">editFileColumn</result>
        </action>
   
        <action name="updateFileColumn" method="updateFileColumn" class="defineFileColumnAction">
            <result name="editClinicalFile" type="tiles">editClinicalFile</result>
        </action>
        
    </package>
    
</struts>
