<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.application.study">
    <!-- Create typedef's for the enums -->
    <typedef name="AnnotationFieldType" class="gov.nih.nci.caintegrator2.common.GenericEnumUserType"> 
       <param name="enumClass">gov.nih.nci.caintegrator2.application.study.AnnotationFieldType</param> 
    </typedef> 
	<class name="AnnotationFieldDescriptor" table="ANNOTATION_FIELD_DESCRIPTOR" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
        
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
        
        <property name="name" type="string" column="NAME"/>
                
        <property name="type" type="AnnotationFieldType" column="TYPE"/>
        
        <property name="shownInBrowse" type="boolean" column="SHOWN_IN_BROWSE"/>
        
		<many-to-one name="definition" class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="ANNOTATION_DEFINITION_ID"
		    lazy="proxy" cascade="save-update" />
	</class>
</hibernate-mapping>