<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.application.study">
	<!-- Create typedef's for the enums -->
	<typedef name="Status" class="gov.nih.nci.caintegrator2.common.GenericEnumUserType"> 
       <param name="enumClass">gov.nih.nci.caintegrator2.application.study.Status</param> 
    </typedef> 
    
    <typedef name="DataType" class="gov.nih.nci.caintegrator2.common.GenericEnumUserType"> 
       <param name="enumClass">gov.nih.nci.caintegrator2.application.study.GenomicDataSourceDataTypeEnum</param> 
    </typedef> 
	
	<class name="GenomicDataSourceConfiguration" table="GENOMIC_DATA_SOURCE_CONFIGURATION" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
        
        <many-to-one name="studyConfiguration" 
            class="gov.nih.nci.caintegrator2.application.study.StudyConfiguration" 
            column="STUDY_CONFIGURATION_ID"
            not-null="true"
            insert="false"
            update="false"/>
		
        <many-to-one name="serverProfile" class="gov.nih.nci.caintegrator2.external.ServerConnectionProfile" column="SERVER_CONNECTION_PROFILE_ID"
            lazy="false" cascade="all" />
            
        <property name="experimentIdentifier" type="string" column="EXPERIMENT_IDENTIFIER"/>
        <property name="dataType" type="DataType" column="DATA_TYPE"/>
        <property name="platformVendor" type="string" column="PLATFORM_VENDOR"/>
        <property name="platformName" type="string" column="PLATFORM_NAME"/>
        <property name="sampleMappingCommaSeparatedFileNames" type="string" column="SAMPLE_MAPPING_FILE_NAME"/>
        <property name="status" type="Status" column="STATUS"/>
        <property name="statusDescription" type="string" column="STATUS_DESCRIPTION"/>
        
        <list name="sampleIdentifiers" lazy="true" inverse="true" cascade="all">
            <cache usage="read-write" />
            <key column="GENOMIC_DATA_SOURCE_CONFIGURATION_ID" />
            <list-index column="LIST_INDEX"/>
            <one-to-many class="gov.nih.nci.caintegrator2.external.caarray.SampleIdentifier"/>
        </list>
        
        <list name="samples" lazy="true" cascade="all">
            <cache usage="read-write" />
            <key column="GENOMIC_DATA_SOURCE_CONFIGURATION_ID" />
            <list-index column="GENOMIC_DATA_SOURCE_INDEX"/>
            <one-to-many class="gov.nih.nci.caintegrator2.domain.genomic.Sample" />
        </list>
        
        <set name="controlSampleSetCollection" lazy="true" cascade="all">
            <cache usage="read-write" />
            <key column="GENOMIC_DATA_SOURCE_CONFIGURATION_ID" />
            <one-to-many class="gov.nih.nci.caintegrator2.domain.genomic.SampleSet" />
        </set>
        
        <component name="CopyNumberDataConfiguration">
            <property name="mappingFilePath" type="string" column="COPY_NUMBER_MAPPING_FILE_PATH" />
            <property name="changePointSignificanceLevel" type="double" column="COPY_NUMBER_CHANGE_POINT_SIGNIFICANCE_LEVEL" />
            <property name="earlyStoppingCriterion" type="double" column="COPY_NUMBER_EARLY_STOPPING_CRITERION" />
            <property name="permutationReplicates" type="integer" column="COPY_NUMBER_PERMUTATION_REPLICATES" />
            <property name="randomNumberSeed" type="integer" column="COPY_NUMBER_RANDOM_NUMBER_SEED" />
            <many-to-one name="caDNACopyService" cascade="all" column="COPY_NUMBER_CADNA_COPY_SERVICE_ID" />
        </component>
        
        
	</class>
</hibernate-mapping>