<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.domain.annotation">
	<!-- Create typedef's for the enums -->
    <typedef name="SurvivalValueTypeEnum" class="gov.nih.nci.caintegrator2.common.GenericEnumUserType"> 
       <param name="enumClass">gov.nih.nci.caintegrator2.domain.annotation.SurvivalValueTypeEnum</param> 
    </typedef> 
    
    <typedef name="SurvivalLengthUnitsEnum" class="gov.nih.nci.caintegrator2.common.GenericEnumUserType"> 
       <param name="enumClass">gov.nih.nci.caintegrator2.domain.annotation.SurvivalLengthUnitsEnum</param> 
    </typedef> 
	
	<class name="SurvivalValueDefinition" table="SURVIVAL_VALUE_DEFINITION" lazy="false" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		<!-- Attributes mapping for the AbstractAnnotationValue class -->
		<property name="name" type="string" column="NAME"/>
        <property name="survivalValueType" type="SurvivalValueTypeEnum" column="SURVIVAL_VALUE_TYPE"/>
		
		<!-- Associations -->
		<!-- For "Date Type" -->
		<many-to-one name="survivalStartDate" class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="SURVIVAL_START_DATE_ID" cascade="save-update,merge" />
		<many-to-one name="deathDate" class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="DEATH_DATE_ID" cascade="save-update,merge" />
		<many-to-one name="lastFollowupDate" class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="LAST_FOLLOWUP_DATE_ID" cascade="save-update,merge" />
		
		<!-- For "Length of time" type -->
		<property name="valueForCensored" type="string" column="VALUE_FOR_CENSORED"/>
		<property name="survivalLengthUnits" type="SurvivalLengthUnitsEnum" column="SURVIVAL_LENGTH_UNITS"/>
		<many-to-one name="survivalLength" class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="SURVIVAL_LENGTH_ID" cascade="save-update,merge" />
		<many-to-one name="survivalStatus" class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="SURVIVAL_STATUS_ID" cascade="save-update,merge" />

	</class>
</hibernate-mapping>