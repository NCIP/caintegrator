<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.domain.genomic">
    <typedef name="ReporterTypeEnum" class="gov.nih.nci.caintegrator2.common.GenericEnumUserType"> 
       <param name="enumClass">gov.nih.nci.caintegrator2.domain.genomic.ReporterTypeEnum</param> 
    </typedef> 
	<class name="ReporterList" table="REPORTER_LIST" lazy="false" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		<!-- Attributes mapping for the ReporterList class -->
		<property name="reporterType" type="ReporterTypeEnum" column="REPORTER_TYPE"/>
		<!-- Associations mapping for the ReporterList class -->
		<list name="reporters" lazy="true" cascade="all-delete-orphan" inverse="true">
			<cache usage="read-write" />
			<key column="REPORTER_LIST_ID" />
            <list-index column="REPORTER_INDEX" />
			<one-to-many class="gov.nih.nci.caintegrator2.domain.genomic.AbstractReporter" />
		</list>
        <set name="arrayDatas" lazy="true" cascade="save-update,merge" inverse="true">
            <cache usage="read-write" />
            <key column="REPORTER_LIST_ID" />
            <one-to-many class="gov.nih.nci.caintegrator2.domain.genomic.ArrayData"/>
        </set>
		<many-to-one name="platform" class="gov.nih.nci.caintegrator2.domain.genomic.Platform" column="PLATFORM_ID" lazy="proxy" cascade="save-update,merge" />
	</class>
</hibernate-mapping>