<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.domain.genomic">
	<class name="ReporterSet" table="REPORTER_SET" lazy="false" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		<!-- Attributes mapping for the ReporterSet class -->
		<property name="reporterType" type="string" column="REPORTER_TYPE"/>
		<!-- Associations mapping for the ReporterSet class -->
		<set name="reporters" lazy="true" cascade="save-update" inverse="true">
			<cache usage="read-write" />
			<key column="REPORTER_SET_ID" />
			<one-to-many class="gov.nih.nci.caintegrator2.domain.genomic.AbstractReporter"/>
		</set>
	    <set name="arrayDataCollection" lazy="true" cascade="save-update" inverse="true">
            <cache usage="read-write" />
            <key column="REPORTER_SET_ID" />
            <one-to-many class="gov.nih.nci.caintegrator2.domain.genomic.ArrayData"/>
        </set>
		
		<many-to-one name="platform" class="gov.nih.nci.caintegrator2.domain.genomic.Platform" column="PLATFORM_ID" lazy="proxy" cascade="save-update" />
	</class>
</hibernate-mapping>