<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.domain.genomic">
	<class name="Array" table="MICROARRAY" lazy="false" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		<!-- Attributes mapping for the Array class -->
		<property name="name" type="string" column="NAME"/>
		<!-- Associations mapping for the Array class -->
		<many-to-one name="platform" class="gov.nih.nci.caintegrator2.domain.genomic.Platform" column="PLATFORM_ID" lazy="proxy" cascade="save-update" />
		<one-to-one name="arrayData" class="gov.nih.nci.caintegrator2.domain.genomic.ArrayData" property-ref="array" />
		<set name="sampleCollection" table="MICROARRAY_SAMPLES" lazy="true" inverse="true" cascade="save-update" >
			<cache usage="read-write" />
			<key column="MICROARRAY_ID" />
			<many-to-many class="gov.nih.nci.caintegrator2.domain.genomic.Sample" column="SAMPLE_ID" />
		</set>
	</class>
</hibernate-mapping>