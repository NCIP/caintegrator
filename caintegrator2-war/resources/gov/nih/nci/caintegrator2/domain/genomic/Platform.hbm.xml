<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.domain.genomic">

    <!-- Create typedef's for the enums -->
    <typedef name="Vendor" class="gov.nih.nci.caintegrator2.common.GenericEnumUserType"> 
       <param name="enumClass">gov.nih.nci.caintegrator2.application.arraydata.PlatformVendorEnum</param> 
    </typedef> 

	<class name="Platform" table="PLATFORM" lazy="false" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		<!-- Attributes mapping for the Platform class -->
		<property name="name" type="string" column="NAME"/>
        <property name="version" type="string" column="VERSION"/>
        <property name="vendor" type="Vendor" column="VENDOR"/>
		<!-- Associations mapping for the Platform class -->
		<set name="reporterListsInternal" lazy="true" sort="natural" cascade="all" >
			<cache usage="read-write" />
			<key column="PLATFORM_ID" />
			<one-to-many class="gov.nih.nci.caintegrator2.domain.genomic.ReporterList"/>
		</set>
	</class>
</hibernate-mapping>