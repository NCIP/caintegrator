<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.domain.translational">
	<class name="Study" table="STUDY" lazy="false" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		<!-- Attributes mapping for the Study class -->
		<property name="longTitleText" type="string" column="LONG_TITLE_TEXT"/>
		<property name="shortTitleText" type="string" column="SHORT_TITLE_TEXT"/>
		<!-- Associations mapping for the Study class -->
		<set name="timepointCollection" lazy="true" cascade="save-update" >
			<cache usage="read-write" />
			<key column="STUDY_ID" />
			<one-to-many class="gov.nih.nci.caintegrator2.domain.translational.Timepoint"/>
		</set>
		<set name="sampleAnnotationCollection" table="STUDY_SAMPLE_ANNOTATIONS" lazy="true" cascade="save-update" >
			<cache usage="read-write" />
			<key column="STUDY_ID" />
			<many-to-many class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="ANNOTATION_DEFINITION_ID" />
		</set>
		<set name="imageSeriesAnnotationCollection" table="STUDY_IMAGE_ANNOTATIONS" lazy="true" cascade="save-update" >
			<cache usage="read-write" />
			<key column="STUDY_ID" />
			<many-to-many class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="ANNOTATION_DEFINITION_ID" />
		</set>
        <set name="assignmentCollection" lazy="true" cascade="save-update" >
            <cache usage="read-write" />
            <key column="STUDY_ID" />
            <one-to-many class="gov.nih.nci.caintegrator2.domain.translational.StudySubjectAssignment"/>
        </set>
        <set name="controlSampleCollection" lazy="true" cascade="save-update" >
            <cache usage="read-write" />
            <key column="CONTROL_FOR_STUDY_ID" />
            <one-to-many class="gov.nih.nci.caintegrator2.domain.genomic.Sample"/>
        </set>
		<set name="subjectAnnotationCollection" table="STUDY_SUBJECT_ANNOTATIONS" lazy="true" cascade="save-update" >
			<cache usage="read-write" />
			<key column="STUDY_ID" />
			<many-to-many class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="ANNOTATION_DEFINITION_ID" />
		</set>
		<many-to-one name="defaultTimepoint" class="gov.nih.nci.caintegrator2.domain.translational.Timepoint" column="DEFAULT_TIMEPOINT_ID" unique="true" lazy="proxy" cascade="save-update"/>
	</class>
</hibernate-mapping>