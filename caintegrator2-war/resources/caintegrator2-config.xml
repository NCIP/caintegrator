<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"
    default-lazy-init="false" 
    default-dependency-check="none" 
    default-autowire="no">

    <!-- ******************************************************************* -->
    <!-- ** ACTIONS                                                       ** -->
    <!-- ******************************************************************* -->

    <!-- Navigation -->

    <bean id="homepageAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.HomepageAction">
    </bean>
    
    <bean id="browseStudyAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.BrowseStudyAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>
    
    <bean id="workspaceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.WorkspaceAction">
        <property name="workspaceService">
            <ref local="workspaceService"/>
        </property>
    </bean>
    
    <bean id="loginAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.LoginAction">
    </bean>
    <!-- Study Management -->

    <bean id="manageStudiesAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.ManageStudiesAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="deployStudyAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.DeployStudyAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="editStudyAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.EditStudyAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="saveStudyAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.SaveStudyAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
        <property name="workspaceService">
            <ref local="workspaceService"/>
        </property>
    </bean>

    <bean id="addClinicalFileAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.AddClinicalFileAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="addImagingFileAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.AddImageFileAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>
    
    <bean id="editImagingSourceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.EditImagingSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>
    
    <bean id="editClinicalSourceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.EditClinicalSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="saveClinicalSourceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.SaveClinicalSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

	<bean id="saveImagingSourceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.SaveImagingSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>
    
    <bean id="loadClinicalSourceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.LoadClinicalSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

	<bean id="loadImagingSourceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.LoadImagingSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>
    
    <bean id="defineFileColumnAction"
        scope="session"
        class="gov.nih.nci.caintegrator2.web.action.study.management.DefineFileColumnAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="defineImagingFileColumnAction"
        scope="session"
        class="gov.nih.nci.caintegrator2.web.action.study.management.DefineImagingFileColumnAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>
    
    <bean id="editGenomicSourceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.EditGenomicSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="saveGenomicSourceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.SaveGenomicSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="editSampleMappingAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.EditSampleMappingAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="saveSampleMappingAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.SaveSampleMappingAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <!-- Query Management actions -->
    
    <bean id="manageQueryAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.query.ManageQueryAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
        <property name="queryManagementService">
            <ref local="queryManagementService"/>
        </property>
    </bean>   
    
    <bean id="executeQueryAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.query.ExecuteQueryAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
        <property name="queryManagementService">
            <ref local="queryManagementService"/>
        </property>
    </bean>   

    <!-- ******************************************************************* -->
    <!-- ** SUBSYSTEMS                                                    ** -->
    <!-- ******************************************************************* -->

    <bean id="studyManagementService" 
        class="gov.nih.nci.caintegrator2.application.study.StudyManagementServiceImpl">
        <property name="dao">
            <ref local="caIntegrator2Dao"/>
        </property>
        <property name="fileManager">
            <ref local="fileManager"/>
        </property>
        <property name="caDSRFacade">
            <ref local="caDSRFacade"/>
        </property>
        <property name="caArrayFacade">
            <ref local="caArrayFacade"/>
        </property>
        <property name="nciaFacade">
            <ref local="nciaFacade"/>
        </property>
        <property name="arrayDataService">
            <ref local="arrayDataService"/>
        </property>
    </bean>

    <bean id="workspaceService" 
        class="gov.nih.nci.caintegrator2.application.workspace.WorkspaceServiceImpl">
        <property name="dao">
            <ref local="caIntegrator2Dao"/>
        </property>
    </bean>
    
    <bean id="queryManagementService" 
            class="gov.nih.nci.caintegrator2.application.query.QueryManagementServiceImpl">
        <property name="dao">
            <ref local="caIntegrator2Dao"/>
        </property>
        <property name="arrayDataService">
            <ref local="arrayDataService"/>
        </property>
        <property name="resultHandler">
            <ref local="resultHandler"/>
        </property>
    </bean>

    <bean id="resultHandler" class="gov.nih.nci.caintegrator2.application.query.ResultHandlerImpl" />

    <bean id="caDSRFacade"
        class="gov.nih.nci.caintegrator2.external.cadsr.CaDSRFacadeImpl">
        <property name="dataDescription" value="http://freestyle.nci.nih.gov"/>        
        <property name="search">
            <ref local="caDSRSearch" />
        </property>
    </bean>

    <bean id="caDSRSearch"
        class="gov.nih.nci.cadsr.freestylesearch.util.Search" />

    <bean id="caIntegrator2Dao"
        class="gov.nih.nci.caintegrator2.data.CaIntegrator2DaoImpl">
        <property name="sessionFactory">
            <ref local="sessionFactory" />
        </property>
    </bean>

    <bean id="caArrayFacade" 
        class="gov.nih.nci.caintegrator2.external.caarray.CaArrayFacadeImpl">
        <property name="serviceFactory">
            <ref local="caArrayServiceFactory"/>
        </property>
        <property name="dao">
            <ref local="caIntegrator2Dao"/>
        </property>
    </bean>

    <bean id="arrayDataService" 
        class="gov.nih.nci.caintegrator2.application.arraydata.ArrayDataServiceImpl">
        <property name="dao">
            <ref local="caIntegrator2Dao"/>
        </property>
        <property name="fileManager">
            <ref local="fileManager"/>
        </property>
    </bean>
    
    <bean id="nciaFacade" 
         class="gov.nih.nci.caintegrator2.external.ncia.NCIAFacadeImpl">
         <property name="nciaServiceFactory">
            <ref local="nciaServiceFactory"/>
        </property>
    </bean>
    
    <bean id="nciaServiceFactory" class="gov.nih.nci.caintegrator2.external.ncia.NCIAServiceFactoryImpl" />
        
    <bean id="nciaServerConnectionProfile" class="gov.nih.nci.caintegrator2.external.ServerConnectionProfile" >
       <!--  <property name="url" value="http://imaging-stage.nci.nih.gov/wsrf/services/cagrid/NCIACoreService?" /> -->
       <!--  Note, the dev url below can only be used when behind NCI's VPN  -->
       <property name="url" value="http://imaging-dev.nci.nih.gov/wsrf/services/cagrid/NCIACoreService" />
       
    </bean>
    
    <bean id="caArrayServiceFactory" 
        class="gov.nih.nci.caintegrator2.external.caarray.CaArrayServiceFactoryImpl" />

    <bean id="fileManager"
        class="gov.nih.nci.caintegrator2.file.FileManagerImpl">
        <property name="configurationHelper">
            <ref local="configurationHelper" />
        </property>
    </bean>
        

    <!-- ******************************************************************* -->
    <!-- ** SERVICES                                                      ** -->
    <!-- ******************************************************************* -->
        
    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>
        
    <bean id="configurationHelper" class="gov.nih.nci.caintegrator2.common.ConfigurationHelperImpl">
        <property name="dataSource">
            <ref local="dataSource"/>
        </property>
    </bean>
    
    <tx:annotation-driven transaction-manager="transactionManager" />
    
    <bean id="sessionFactory" 
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource">
            <ref local="dataSource"/>
        </property>
        <property name="configLocation">
            <value>classpath:hibernate.cfg.xml</value>
        </property>
    </bean>
    
    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:jdbc/CaIntegrator2DataSource" />
    </bean>
    
</beans>