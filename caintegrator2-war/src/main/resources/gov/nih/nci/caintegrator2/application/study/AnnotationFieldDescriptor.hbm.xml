<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.application.study">
	<class name="AnnotationFieldDescriptor" table="ANNOTATION_FIELD_DESCRIPTOR" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
        
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		
        <property name="name" type="string" column="NAME"/>
        
        <property name="keywords" type="string" column="KEYWORDS"/>
        
        <property name="type" type="string" column="TYPE"/>
        
		<many-to-one name="definition" class="gov.nih.nci.caintegrator2.domain.annotation.AnnotationDefinition" column="STUDY_ID"
		    lazy="proxy" unique="true" cascade="save-update" />
	</class>
</hibernate-mapping>