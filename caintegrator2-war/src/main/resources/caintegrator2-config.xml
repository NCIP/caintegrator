<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"
    default-lazy-init="false" 
    default-dependency-check="none" 
    default-autowire="no">

    <!-- Actions -->
    <bean id="workspaceAction"
        scope="session"
        class="gov.nih.nci.caintegrator2.web.action.WorkspaceAction">
        <property name="workspaceService">
            <ref local="workspaceService"/>
        </property>
    </bean>

    <bean id="homepageAction"
        class="gov.nih.nci.caintegrator2.web.action.HomepageAction">
    </bean>

    <bean id="manageStudiesAction"
        scope="session"
        class="gov.nih.nci.caintegrator2.web.action.ManageStudiesAction">
        <property name="service">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <!-- Subsystems -->

    <bean id="studyManagementService" 
        class="gov.nih.nci.caintegrator2.application.study.StudyManagementServiceImpl">
        <property name="dao">
            <ref local="caIntegrator2Dao"/>
        </property>
    </bean>

    <bean id="workspaceService" 
        class="gov.nih.nci.caintegrator2.application.workspace.WorkspaceServiceImpl">
        <property name="dao">
            <ref local="caIntegrator2Dao"/>
        </property>
    </bean>

    <bean id="caIntegrator2Dao"
        class="gov.nih.nci.caintegrator2.data.CaIntegrator2DaoImpl">
        <property name="sessionFactory">
            <ref local="sessionFactory" />
        </property>
    </bean>

    <bean id="caArrayFacade" 
        class="gov.nih.nci.caintegrator2.external.caarray.CaArrayFacadeImpl">
        <property name="serviceFactory">
            <ref local="caArrayServiceFactory"/>
        </property>
    </bean>
    
    <bean id="caArrayServiceFactory" 
        class="gov.nih.nci.caintegrator2.external.caarray.CaArrayServiceFactoryImpl" />
        
    <!-- Services -->
	    
    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>
    
    <tx:annotation-driven transaction-manager="transactionManager" />
    
    <bean id="sessionFactory" 
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="configLocation">
            <value>classpath:hibernate.cfg.xml</value>
        </property>
    </bean>
    
</beans>