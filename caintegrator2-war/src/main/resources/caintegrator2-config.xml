<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-lazy-init="false" default-dependency-check="none" default-autowire="no">

    <!-- Actions -->

    <bean id="workspaceAction"
        name="WorkspaceAction"
        singleton="false"
        class="gov.nih.nci.caintegrator2.web.action.WorkspaceAction">
        <property name="workspaceService">
            <ref local="workspaceService"/>
        </property>
    </bean>

    <!-- Subsystems -->

    <bean id="workspaceService" 
        name="WorkspaceService"
        class="gov.nih.nci.caintegrator2.application.workspace.WorkspaceServiceImpl" 
        singleton="true">
        <property name="dao">
            <ref local="dao"/>
        </property>
    </bean>
    
    <bean id="dao" 
        name="CaIntegrator2DAO"
        class="gov.nih.nci.caintegrator2.data.CaIntegrator2DaoImpl">
        <property name="applicationService">
            <ref bean="ApplicationServiceImpl" />
        </property>
    </bean>

    <bean id="caArrayFacade" 
        class="gov.nih.nci.caintegrator2.external.caarray.CaArrayFacadeImpl" 
        singleton="true">
        <property name="serviceFactory">
            <ref local="caArrayServiceFactory"/>
        </property>
    </bean>
    
    <bean id="caArrayServiceFactory" 
        class="gov.nih.nci.caintegrator2.external.caarray.CaArrayServiceFactoryImpl" />
	
</beans>