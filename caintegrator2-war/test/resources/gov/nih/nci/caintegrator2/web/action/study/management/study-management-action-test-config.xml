<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-lazy-init="false" default-dependency-check="none" default-autowire="no">

    <!-- Actions -->

    <bean id="addClinicalFileAction"
        singleton="false"
        class="gov.nih.nci.caintegrator2.web.action.study.management.AddClinicalFileAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="editClinicalSourceAction"
        singleton="false"
        class="gov.nih.nci.caintegrator2.web.action.study.management.EditClinicalSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="saveClinicalSourceAction"
        singleton="false"
        class="gov.nih.nci.caintegrator2.web.action.study.management.SaveClinicalSourceAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="editStudyAction"
        singleton="false"
        class="gov.nih.nci.caintegrator2.web.action.study.management.EditStudyAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="defineStudyAction"
        singleton="false"
        class="gov.nih.nci.caintegrator2.web.action.study.management.DefineStudyAction">
        <property name="service">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="saveStudyAction"
        singleton="false"
        class="gov.nih.nci.caintegrator2.web.action.study.management.SaveStudyAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="studyManagementService" 
        class="gov.nih.nci.caintegrator2.application.study.StudyManagementServiceStub" 
        singleton="true">
    </bean>

</beans>