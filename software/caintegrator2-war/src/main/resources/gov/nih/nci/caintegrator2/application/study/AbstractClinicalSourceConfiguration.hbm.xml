<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.application.study">
	<class name="AbstractClinicalSourceConfiguration" table="ABSTRACT_CLINICAL_SOURCE_CONFIGURATION" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		
		<list name="annotationDescriptors" cascade="all">
            <cache usage="read-write" />
            <key column="CLINICAL_SOURCE_CONFIGURATION_ID" />
            <index column="LIST_INDEX"/>
            <one-to-many class="gov.nih.nci.caintegrator2.application.study.AnnotationFieldDescriptor"/>
        </list>
		
        <many-to-one name="identifierDescriptor" class="gov.nih.nci.caintegrator2.application.study.AnnotationFieldDescriptor" column="ANNOTATION_FIELD_DESCRIPTOR_ID"
            lazy="proxy" cascade="save-update" />
        <many-to-one name="studyConfiguration" class="gov.nih.nci.caintegrator2.application.study.StudyConfiguration" column="STUDY_CONFIGURATION_ID"
            lazy="proxy" cascade="save-update" />
            
        <joined-subclass name="DelimitedTextClinicalSourceConfiguration" 
                         table="DELIMITED_TEXT_CLINICAL_SOURCE_CONFIGURATION" lazy="true">
            <key column="ID" />            
        </joined-subclass>
        
        
	</class>
</hibernate-mapping>