<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"
    default-lazy-init="false" 
    default-dependency-check="none" 
    default-autowire="no">

    <!-- ******************************************************************* -->
    <!-- ** ACTIONS                                                       ** -->
    <!-- ******************************************************************* -->

    <!-- Navigation -->

    <bean id="homepageAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.HomepageAction">
    </bean>
    <bean id="workspaceAction"
        scope="session"
        class="gov.nih.nci.caintegrator2.web.action.WorkspaceAction">
        <property name="workspaceService">
            <ref local="workspaceService"/>
        </property>
    </bean>
    
    <bean id="loginAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.LoginAction">
    </bean>
    <!-- Study Management -->

    <bean id="createStudyAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.CreateStudyAction">
    </bean>

    <bean id="saveStudyAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.SaveStudyAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="addClinicalFileAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.AddClinicalFileAction">
        <property name="studyManagementService">
            <ref local="studyManagementService"/>
        </property>
    </bean>
    
    
    

    <bean id="defineClinicalSourceAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.DefineClinicalSourceAction">
        <property name="service">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="defineFileColumnAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.DefineFileColumnAction">
        <property name="service">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="defineStudyAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.study.management.DefineStudyAction">
        <property name="service">
            <ref local="studyManagementService"/>
        </property>
    </bean>

    <bean id="manageStudiesAction"
        scope="prototype"
        class="gov.nih.nci.caintegrator2.web.action.ManageStudiesAction">
        <property name="service">
            <ref local="studyManagementService"/>
        </property>
    </bean>


    <!-- ******************************************************************* -->
    <!-- ** SUBSYSTEMS                                                    ** -->
    <!-- ******************************************************************* -->

    <bean id="studyManagementService" 
        class="gov.nih.nci.caintegrator2.application.study.StudyManagementServiceImpl">
        <property name="dao">
            <ref local="caIntegrator2Dao"/>
        </property>
        <property name="fileManager">
            <ref local="fileManager"/>
        </property>
        <property name="caDSRFacade">
            <ref local="caDSRFacade"/>
        </property>
    </bean>

    <bean id="workspaceService" 
        class="gov.nih.nci.caintegrator2.application.workspace.WorkspaceServiceImpl">
        <property name="dao">
            <ref local="caIntegrator2Dao"/>
        </property>
    </bean>

    <bean id="caDSRFacade"
        class="gov.nih.nci.caintegrator2.external.cadsr.CaDSRFacadeImpl">
        <property name="dataDescription" value="http://freestyle.nci.nih.gov"/>        
        <property name="search">
            <ref local="caDSRSearch" />
        </property>
    </bean>

    <bean id="caDSRSearch"
        class="gov.nih.nci.cadsr.freestylesearch.util.Search" />

    <bean id="caIntegrator2Dao"
        class="gov.nih.nci.caintegrator2.data.CaIntegrator2DaoImpl">
        <property name="sessionFactory">
            <ref local="sessionFactory" />
        </property>
    </bean>

    <bean id="caArrayFacade" 
        class="gov.nih.nci.caintegrator2.external.caarray.CaArrayFacadeImpl">
        <property name="serviceFactory">
            <ref local="caArrayServiceFactory"/>
        </property>
    </bean>
    
    <bean id="caArrayServiceFactory" 
        class="gov.nih.nci.caintegrator2.external.caarray.CaArrayServiceFactoryImpl" />

    <bean id="fileManager"
        class="gov.nih.nci.caintegrator2.file.FileManagerImpl">
        <property name="configurationHelper">
            <ref local="configurationHelper" />
        </property>
    </bean>
        

    <!-- ******************************************************************* -->
    <!-- ** SERVICES                                                      ** -->
    <!-- ******************************************************************* -->
        
    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>
        
    <bean id="configurationHelper" class="gov.nih.nci.caintegrator2.common.ConfigurationHelperImpl">
        <property name="dataSource">
            <ref local="dataSource"/>
        </property>
    </bean>
    
    <tx:annotation-driven transaction-manager="transactionManager" />
    
    <bean id="sessionFactory" 
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource">
            <ref local="dataSource"/>
        </property>
        <property name="configLocation">
            <value>classpath:hibernate.cfg.xml</value>
        </property>
    </bean>
    
    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:jdbc/CaIntegrator2DataSource" />
    </bean>
    
</beans>