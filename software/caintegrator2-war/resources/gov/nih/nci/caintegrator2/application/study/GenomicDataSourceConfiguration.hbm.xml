<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.application.study">
	<class name="GenomicDataSourceConfiguration" table="GENOMIC_DATA_SOURCE_CONFIGURATION" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
        
        <many-to-one name="studyConfiguration" 
            class="gov.nih.nci.caintegrator2.application.study.StudyConfiguration" 
            column="STUDY_CONFIGURATION_ID"
            not-null="true"
            insert="false"
            update="false"/>
		
        <many-to-one name="serverProfile" class="gov.nih.nci.caintegrator2.external.ServerConnectionProfile" column="SERVER_CONNECTION_PROFILE_ID"
            lazy="proxy" cascade="save-update" />
            
        <property name="experimentIdentifier" type="string" column="EXPERIMENT_IDENTIFIER"/>
        
        <list name="sampleIdentifiers" lazy="true" inverse="true">
            <cache usage="read-write" />
            <key column="GENOMIC_DATA_SOURCE_CONFIGURATION_ID" />
            <index column="LIST_INDEX"/>
            <one-to-many class="gov.nih.nci.caintegrator2.external.caarray.SampleIdentifier"/>
        </list>
        
        <list name="samples" table="GENOMIC_DATA_SOURCE_SAMPLES" lazy="true" cascade="save-update">
            <cache usage="read-write" />
            <key column="GENOMIC_DATA_SOURCE_ID" />
            <index column="LIST_INDEX"/>
            <many-to-many class="gov.nih.nci.caintegrator2.domain.genomic.Sample" column="SAMPLE_ID"/>
        </list>
        
        
	</class>
</hibernate-mapping>