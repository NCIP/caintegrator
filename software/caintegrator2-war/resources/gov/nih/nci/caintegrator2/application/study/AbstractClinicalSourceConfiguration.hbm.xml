<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.application.study">
	<!-- Create typedef's for the enums -->
	<typedef name="Status" class="gov.nih.nci.caintegrator2.common.GenericEnumUserType"> 
       <param name="enumClass">gov.nih.nci.caintegrator2.application.study.Status</param> 
    </typedef> 
    
	<class name="AbstractClinicalSourceConfiguration" table="ABSTRACT_CLINICAL_SOURCE_CONFIGURATION" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		
		<property name="lastModifiedDate" type="java.util.Date" column="LAST_MODIFIED_DATE"/>
		<property name="status" type="Status" column="STATUS"/>
        <property name="statusDescription" type="string" column="STATUS_DESCRIPTION"/>
		
        <many-to-one name="studyConfiguration" class="gov.nih.nci.caintegrator2.application.study.StudyConfiguration" column="STUDY_CONFIGURATION_ID"
            not-null="true" lazy="proxy" cascade="save-update,merge" update="false" insert="false" />
            
        <joined-subclass name="DelimitedTextClinicalSourceConfiguration" 
                         table="DELIMITED_TEXT_CLINICAL_SOURCE_CONFIGURATION" lazy="true">
            <key column="ID" />    
            <many-to-one name="annotationFile" class="gov.nih.nci.caintegrator2.application.study.AnnotationFile" column="ANNOTATION_FILE_ID" lazy="proxy" cascade="all"/>        
        </joined-subclass>
        
        
	</class>
</hibernate-mapping>