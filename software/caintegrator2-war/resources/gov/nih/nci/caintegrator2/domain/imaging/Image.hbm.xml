<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.domain.imaging">
	<class name="Image" table="IMAGE" lazy="false" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		<!-- Attributes mapping for the Image class -->
        <property name="identifier" type="string" column="IDENTIFIER"/>
		<!-- Associations mapping for the Image class -->
		<many-to-one name="series" class="gov.nih.nci.caintegrator2.domain.imaging.ImageSeries" column="IMAGE_SERIES_ID" lazy="proxy" cascade="save-update,merge" />
		<set name="annotationCollection" lazy="true" cascade="save-update,merge" >
			<cache usage="read-write" />
			<key column="IMAGE_ID" />
			<one-to-many class="gov.nih.nci.caintegrator2.domain.annotation.AbstractAnnotationValue"/>
		</set>
	</class>
</hibernate-mapping>