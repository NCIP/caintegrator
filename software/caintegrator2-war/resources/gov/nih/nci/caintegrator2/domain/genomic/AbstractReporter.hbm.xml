<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="gov.nih.nci.caintegrator2.domain.genomic">
	<class name="AbstractReporter" table="ABSTRACT_REPORTER" lazy="false" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="long" column="ID">
			<generator class="native" />
		</id>
		<!-- Attributes mapping for the AbstractReporter class -->
        <property name="name" type="string" column="NAME"/>
        <property name="index" type="integer" column="REPORTER_INDEX" not-null="true"/>
		<!-- Associations mapping for the AbstractReporter class -->
        <set name="genes" table="REPORTER_GENES" lazy="true" cascade="save-update,merge" >
            <cache usage="read-write" />
            <key column="REPORTER_ID" />
            <many-to-many class="gov.nih.nci.caintegrator2.domain.genomic.Gene" column="GENE_ID" />
        </set>
        <set name="samplesHighVariance" table="SAMPLE_REPORTERS_HIGH_VARIANCE" lazy="true" inverse="true">
            <cache usage="read-write" />
            <key column="ABSTRACT_REPORTER_ID" />
            <many-to-many class="Sample" column="SAMPLE_ID" />
        </set>
		<many-to-one name="reporterList" 
            class="gov.nih.nci.caintegrator2.domain.genomic.ReporterList" 
            column="REPORTER_LIST_ID" 
            not-null="true"
            lazy="proxy" 
            cascade="save-update,merge" />
        <joined-subclass name="GeneExpressionReporter" table="GENE_EXPRESSION_REPORTER" lazy="false">
            <key column="ID" />
        </joined-subclass>
        <joined-subclass name="DnaAnalysisReporter" table="DNA_ANALYSIS_REPORTER" lazy="false">
            <key column="ID" />
            <property name="chromosome" type="string" column="CHROMOSOME"/>
            <property name="position" type="integer" column="POSITION"/>
            <property name="dbSnpId" type="string" column="DB_SNP_ID"/>
            <property name="alleleA" type="character" column="ALLELE_A"/>
            <property name="alleleB" type="character" column="ALLELE_B"/>
        </joined-subclass>
	</class>
</hibernate-mapping>