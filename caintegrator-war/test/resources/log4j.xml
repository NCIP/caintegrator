<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="${logger.debug}">

    <appender name="caintegrator" class="org.apache.log4j.FileAppender">
        <param name="File" value="${project.build.directory}/caintegrator-test.log" />
        <param name="Append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%c] %m%n" />
        </layout>
    </appender>
    
    <logger name="gov.nih.nci.caintegrator">
        <level value="${logger.level}"/>
    </logger>

    <root>
        <level value="${logger.level}" />
        <appender-ref ref="caintegrator" />
    </root>
</log4j:configuration>
