<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ehcache.xsd">

	<diskStore path="java.io.tmpdir/ehcache"/>

	<defaultCache maxEntriesLocalHeap="1000000" maxEntriesLocalDisk="100000000" eternal="false" timeToIdleSeconds="120" 
        timeToLiveSeconds="120"  diskSpoolBufferSizeMB="30" diskExpiryThreadIntervalSeconds="300" 
        memoryStoreEvictionPolicy="LRU" statistics="false">
        <persistence strategy="localTempSwap"/>
    </defaultCache>
</ehcache>