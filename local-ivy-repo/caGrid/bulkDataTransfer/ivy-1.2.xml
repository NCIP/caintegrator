<?xml version="1.0" encoding="UTF-8"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="bulkDataTransfer" revision="1.2" status="release" publication="20080324163636">
    <license name="caGrid" url="http://www.cagrid.org/wiki/CaGrid:LICENSE-1.2"/>
    <description>Bulk Data Transfer service aims to gather useful standard transfer mechanisms
      together into one standard service interface.</description>
  </info>

  <configurations>
    <!-- Private Configurations-->
    <conf name="impl" visibility="private" extends="service,extension"/>
    <conf name="impl-test" visibility="private"/>

    <!-- Public Configurations-->
    <conf name="stubs" visibility="public"/>
    <conf name="common" extends="stubs" visibility="public"/>
    <conf name="client" extends="common" visibility="public"/>

    <conf name="service" visibility="public" extends="client"/>
    <conf name="test" visibility="public" extends="service,impl-test"/>
    
    <conf name="extension" visibility="public" extends="service"/>

  </configurations>


  <publications>
    <artifact name="caGrid-BulkDataHandler-stubs" conf="stubs" type="jar"/>
    <artifact name="caGrid-BulkDataHandler-common" conf="common" type="jar"/>
    <artifact name="caGrid-BulkDataHandler-client" conf="client" type="jar"/>
    <artifact name="caGrid-BulkDataHandler-service" conf="service" type="jar"/>
    <artifact name="caGrid-BulkDataHandler-tests" conf="test" type="jar"/>
    <artifact name="caGrid-BulkDataHandler-extension" conf="extension" type="jar"/>
  </publications>

  <dependencies>

    <!-- Standard caGrid Service Dependencies -->
    <dependency rev="1.2" org="caGrid" name="core" conf="service->default;impl-test->test"/>
    <dependency rev="1.2" org="caGrid" name="metadata" conf="service->security.schemas;client->security.jars"/>
    <dependency rev="1.2" org="caGrid" name="service-security-provider" conf="client->client;service->service"/>
    <dependency rev="1.2" org="caGrid" name="advertisement" conf="service->default"/>

    <!-- Specific caGrid Service Dependencies -->
    <dependency rev="1.2" org="caGrid" name="wsEnum" conf="service->default,schemas"/>
    <dependency rev="1.2" org="caGrid" name="introduce" conf="extension->extension"/>
    <dependency rev="1.2" org="caGrid" name="testing" conf="impl-test->system"/>
    

    <!-- Extenernal Dependencies -->
    <dependency rev="1.0" org="wannheden" name="jetc-task" conf="impl->*"/>
    
    <dependency rev="1.0" org="jdom" name="jdom" conf="service->*"/>
    <dependency rev="0.5.2-patched" org="jaxme" name="jaxmejs" conf="extension->*"/>
  </dependencies>
</ivy-module>
