<?xml version="1.0" encoding="UTF-8"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="transfer" revision="1.2" status="release" publication="20080324163853">
    <license name="caGrid" url="http://www.cagrid.org/wiki/CaGrid:LICENSE-1.2"/>
    <description homepage="http://www.cagrid.org/mwiki/index.php?title=CaGridTransfer">caGrid
      Transfer Service</description>
  </info>

  <configurations>
    <!-- Private Configurations-->
    <conf name="target_grid" visibility="private"/>

    <conf name="impl" visibility="private" extends="service"/>
    <conf name="impl-test" visibility="private"/>

    <!-- Public Configurations-->
    <conf name="stubs" visibility="public"/>
    <conf name="common" extends="stubs" visibility="public"/>
    <conf name="client" extends="common" visibility="public"/>

    <conf name="service" visibility="public" extends="client"/>
    <conf name="extension" visibility="public" extends="service"/>
    
    <conf name="webapp" visibility="public" extends="service"/>
    
    <conf name="test" visibility="public" extends="service,impl-test"/>

  </configurations>


  <publications>
    <artifact name="caGrid-Transfer-stubs" conf="stubs" type="jar"/>
    <artifact name="caGrid-Transfer-common" conf="common" type="jar"/>
    <artifact name="caGrid-Transfer-client" conf="client" type="jar"/>
    <artifact name="caGrid-Transfer-service" conf="service" type="jar"/>
    <artifact name="caGrid-TransferExtension" conf="extension" type="jar"/>
    <artifact name="caGrid-Transfer-webapp" conf="webapp" type="jar"/>
    
    <artifact name="caGrid-Transfer-tests" conf="test" type="jar"/>
  </publications>

  <dependencies>
    <!-- Standard caGrid Service Dependencies -->
    <dependency rev="1.2" org="caGrid" name="core" conf="service->default;impl-test->test"/>
    <dependency rev="1.2" org="caGrid" name="metadata" conf="service->schemas;client->common.jars"/>
    <dependency rev="1.2" org="caGrid" name="service-security-provider" conf="client->client;service->service"/>
    <dependency rev="1.2" org="caGrid" name="advertisement" conf="service->default"/>
    
    <dependency rev="nci_prod-1.2" org="caGrid" name="target_grid" conf="target_grid->urls"/>

    <!-- Specific caGrid Service Dependencies -->
    <dependency rev="1.2" org="caGrid" name="introduce" conf="extension->extension;service->serviceTools;impl-test->test"/>
    <dependency rev="1.2" org="caGrid" name="testing" conf="impl-test->system"/>
    
    <!-- Extenernal Dependencies -->
    <dependency rev="1.0" org="jdom" name="jdom" conf="service->*"/>
    <dependency rev="1.3" org="commons-codec" name="commons-codec" conf="client->*"/>
    <dependency rev="3.0" org="commons-httpclient" name="commons-httpclient" conf="client->*"/>
  </dependencies>
</ivy-module>
